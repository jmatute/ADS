<h2 class= "titulo">Buscar Solicitud</h2>

<% form_tag buscar_path, :method => 'get' do %>

   <p>Ingrese el codigo de la solicitud:</p> <%= text_field_tag :search, params[:search] %><br/>
   <p> Seleccion Institucion Obligada: </p> <%= collection_select(:institucion,:institucion, Institucion.all, :id, :nombre) %><br/> 
   <p>Desde:</p>  <%= date_select :inicio, params[:inicio] %><br/>
   <p>Hasta:</p> <%= date_select  :final,params[:final] %><br/>
   <br/> <%= submit_tag "Search", :name => nil %><br/>
  
<% end %>

<%unless @encontrados.nil?%>
<%if @encontrados.size > 0 %>
<h2 class= "titulo">Solicitudes Encontradas</h2>

	<%@encontrados.each do |t|%>
		<span class = "ResBus">
			<h3 class= "titulo">Solicitud <%=t.numero%> <h3>
			Realizada por:  <%=Solicitante.find_by_id(t.solicitante_id).nombre%> 
			Dirigida a: <%=Institucion.find(t.institucion_id).nombre%> 
		</span>
	<%end%>
<%end%>

<%end%>
