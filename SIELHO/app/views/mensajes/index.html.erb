
<%=link_to "Historial",historial_path(current_user)%>

<table class="sortable"   id="sortabletable" >
<tr>
	<th>Titulo </th> <th> Fecha </th> <th>Emisor </th> <th> Marcar Leido </th> <th> Borrar </th>
</tr>
<% @mensajes.each do |m| %>
<tr>
	<td><%= link_to m.titulo,ver_mensaje_path(current_user,m) %> </td>
	<td><%="#{m.fecha}"%> </td>
	<%if m.emisor_id.eql? 0%>
		<td><%="Sistema "%> </td>
	<%else%>
		<td><%="#{User.find(m.emisor_id).username }"%>
	<%end%>
     <td> <%if m.leido %>
             <img src="/images/check_box_on.gif" />
		  <%else%>
             <%= link_to image_tag("/images/checkbox_off.gif"), leido_path(current_user,m) %>
		  <%end%>		
	</td>	
     <td> 
             <%= link_to image_tag("/images/checkbox_off.gif"), borrado_path(current_user,m) %>
	</td>	

	
</tr>
<% end%>
		</table>
